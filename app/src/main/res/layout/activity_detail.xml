<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        tools:context=".pages.Detail">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/view_slider"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:iss_delay="0"
            app:iss_period="3000"
            app:iss_placeholder="@color/black"
            app:iss_error_image="@color/dark_cyan_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/dark_gray"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/view_slider"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/txt_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_rent"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/dark_gray"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/txt_type"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/txt_rent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/dark_cyan_green"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@id/txt_price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/information_property"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_line1"
            app:layout_constraintBottom_toTopOf="@id/view_line2"
            />

        <ImageView
            android:id="@+id/image_info_property"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_next"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toTopOf="@id/view_line2"
            app:layout_constraintTop_toBottomOf="@id/view_line1"
            app:layout_constraintRight_toRightOf="parent"
            />

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:visibility="visible"
            android:background="@color/dark_cyan_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_info" />

        <View
            android:id="@+id/view_localization"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@drawable/background_info"
            android:elevation="5dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_info"
            />

        <TextView
            android:id="@+id/title_localization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_localization"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:elevation="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/view_localization"
            app:layout_constraintLeft_toLeftOf="@id/view_localization"
            />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/localization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_medium"
            android:text=""
            android:textColor="@color/white"
            android:maxLines="4"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/view_localization"
            app:layout_constraintLeft_toLeftOf="@id/view_localization"
            app:layout_constraintRight_toRightOf="@id/view_localization"
            app:layout_constraintTop_toBottomOf="@id/title_localization" />

        <View
            android:id="@+id/view_info_add"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/background_info"
            android:elevation="5dp"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_localization"
            />

        <TextView
            android:id="@+id/title_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/energy"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:elevation="5dp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/view_info_add"
            app:layout_constraintLeft_toLeftOf="@id/view_info_add"
            />

        <TextView
            android:id="@+id/txt_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:elevation="5dp"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@id/view_info_add"
            app:layout_constraintRight_toRightOf="@id/view_info_add"
            />

        <TextView
            android:id="@+id/title_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:elevation="5dp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="@id/title_energy"
            app:layout_constraintLeft_toLeftOf="@id/view_info_add"
            app:layout_constraintBottom_toBottomOf="@id/view_info_add"
            />

        <TextView
            android:id="@+id/water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            android:elevation="5dp"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="@id/title_energy"
            app:layout_constraintRight_toRightOf="@id/view_info_add"
            app:layout_constraintBottom_toBottomOf="@id/view_info_add"
            />

        <View
            android:id="@+id/view_line3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:background="@color/dark_cyan_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_info_add" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@id/view_line3"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/status_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@id/view_line3"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_due_date"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@id/txt_status"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@id/status_info"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/txt_days_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_days_delay"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@id/txt_date"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/days_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@id/due_date"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/txt_renter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_renter"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@id/txt_days_delay"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/renter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@id/days_delay"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>